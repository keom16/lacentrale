{% extends 'common/admin.html.twig' %}


{% block body %}
    <div class="formulaire">

    {#    #}{# j'utilise la fonction form_start pour insérer la balise form #}
        {{ form_start(articleFormView) }}

        {# j'utilise les fonctions form_errors, form_label et form_widget
         pour afficher respectivement les erreurs, le label et l'input pour
         mon champs title #}
        {{ form_errors(articleFormView.title) }}
        {{ form_label(articleFormView.title) }}

        {# j'utilise le parametre 'attr' pour pouvoir attribuer une classe css
         à mon input #}
        {{ form_widget(articleFormView.title, { 'attr': {'class': 'article_form_title_input'} }) }}

        {{ form_errors(articleFormView.content) }}
        {{ form_label(articleFormView.content) }}
        {{ form_widget(articleFormView.content) }}

        {{ form_label(articleFormView.submit) }}
        {{ form_widget(articleFormView.submit) }}

        {# j'utilise la fonction form_end pour insérer la fermeture de la balise form #}
        {{ form_end(articleFormView) }}


    </div>
{% endblock body%}